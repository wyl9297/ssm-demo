<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.jsp”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/pages/decorators/decorator.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/login.htm" exclue="true" />
    <mapping path="/doLogin.htm" exclue="true" />
</sitemesh>